<resources>

    <style name="Theme.Album.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/advance_window_background</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowAnimationStyle">@style/DefaultAnimation</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.WallpaperList" parent="Theme.Album.Base" />

    <style name="Theme.MainActivity" parent="Theme.Album.Base">
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="Theme.AD" parent="Theme.Album.Base" />

    <style name="Theme.About.Base" parent="Theme.Album.Base">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.About" parent="Theme.About.Base">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="Theme.Pay" parent="Theme.Album.Base" />

    <style name="Theme.MyWallpapers" parent="Theme.Album.Base" />

    <style name="Widget.Album.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox" />

    <style name="DefaultAnimation" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/default_anim_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_stay</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_stay</item>
        <item name="android:activityCloseExitAnimation">@anim/default_anim_out</item>
    </style>

    <style name="Widget.Album.Button.Base" parent="Widget.AppCompat.Button.Colored">
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
    </style>

    <style name="Widget.Album.Button.AD" parent="Widget.Album.Button.Base" />

    <style name="Widget.Album.Button.Retry" parent="Widget.Album.Button.Base">
        <item name="android:drawableStart">@drawable/icon_retry</item>
    </style>

    <style name="Widget.Album.Button.Pay" parent="Widget.Album.Button.Base">
        <item name="android:drawablePadding">10dp</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Album.Text.Base" parent="" />

    <style name="Widget.Album.Text.Prompt" parent="Widget.Album.Text.Base">
        <item name="android:breakStrategy">balanced</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/gallery_theme</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
    </style>

    <style name="Widget.Album.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/colorAccent</item>
    </style>
</resources>
